@using LatvijasPasts.Core.Enums;
@model CvItemViewModel

@{
    ViewBag.Title = $"Edit {Model.Name} CV";
    Layout = "_Layout";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="mb-3">
        @Html.LabelFor(m => m.Name, "Name")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.LastName, "Last Name")
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.OtherName, "Other Name")
        @Html.TextBoxFor(m => m.OtherName, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.PhoneNumber, "Phone Number")
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Email, "E-mail")
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    @foreach (var language in Model.LanguageKnowledge)
    {
        <div class="mb-3">
            @Html.Label(language.Language, "Language")
            @Html.TextBox(language.Language, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.Label(language.LanguageLevel.ToString(), "Language")
            <select asp-for="@language.LanguageLevel" asp-items="Html.GetEnumSelectList<KnowledgeLevel>()">
                <option value="">Please select</option>
            </select>
        </div>
    }
    <button type="submit" class="btn btn-primary">Update</button>
}
